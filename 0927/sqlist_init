#include <stdio.h>

    int fun(int a[]){
            a[0]=2;
            }

    int main(){
        int a[5]={1,5,6,3,8};
        printf("before : %d\n",a[0]);

        fun(a);  

        /*
        'int fun(a);'   OR  
        'int fun(a[]);' OR
        'fun(int a[]);' IS BOTH WRONG!*/

        printf("after : %d\n",a[0]);
        return 0;
        }

        
